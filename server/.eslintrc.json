{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-var": "error",
    "prefer-template": "warn",
    "radix": "warn",
    "no-console": "off",
    "no-unused-vars": "warn"
  }
}
