{
  "name": "capstone-server",
  "version": "1.0.0",
  "description": "Express server for capstone",
  "main": "index.js",
  "scripts": {
    "start:app": "NODE_ENV=development nodemon server/index.js",
    "postinstall": "CONT=$(docker ps -aqf name=node-app) && [ $CONT ] && docker exec -w /backend-app $CONT npm i || true",
    "start": "docker-compose up",
    "build": "docker-compose up --build",
    "prune": "docker-compose down -v --rmi local",
    "stop": "docker-compose down",
    "test:app": "jest --detectOpenHandles --forceExit --passWithNoTests",
    "test": "CONT=$(docker ps -aqf name=node-app) && [ $CONT ] && docker exec -t -w /backend-app $CONT npm run test:app",
    "lint": "eslint --ignore-path ../.gitignore --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "geolib": "^3.3.4",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^4.1.2",
    "mongoose": "^6.0.7"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^2.0.12",
    "supertest": "^6.3.4"
  }
}
